<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1">
    <title>Simple Image SlideShow</title>
    @*<link href="../CSS/Demos.css" rel="stylesheet" type="text/css" />*@
    <script type='text/javascript'
            src='../Scripts/jquery-1.10.2.min.js'>
    </script>

    <script type="text/javascript">
        $(function() {

            var imgs = [
                '../images/1.jpg',
                '../images/2.jpg',
                '../images/3.jpg',
                '../images/4.jpg'];
            var cnt = imgs.length;

            var $imageSlide = $('img[id$=imageSlide]');
            // set the image control to the last image
            $imageSlide.attr('src', imgs[cnt-1]);

            setInterval(Slider, 3000);

            function Slider() {
                $imageSlide.fadeOut("slow", function() {
                    $(this).attr('src', imgs[(imgs.length++) % cnt])
                    .fadeIn("slow");
                });
            }
        })

    </script>

</head>
<body>
    <form id="form1">
        <div class="smallDiv">
            <h2>Image Slide Show - Image Changes Every 3 Seconds</h2><br />
            <asp:Image ID="imageSlide" class="imgdiv" />
        </div>
    </form>
</body>
</html>